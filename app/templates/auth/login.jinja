{% extends "public_layout.jinja" %}


{% block title %}
    ATAS Login
{% endblock title %}

{% block content %}

<div class="row">
    <div class="col-12">
        <h1 class="display-6 mt-3">Welcome to Open ATAS!</h1>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <p class="lead">
            Open ATAS provides audit resolution capabilities to the HHS community
        </p>
    </div>
</div>

<hr />

        <div class="row  justify-content-center">

            <div class="col-6">

                <form method="post" action="/auth/login">
                <div class="card">
                    <div class="card-header">
                        Account Login
                    </div>
                    <div class="card-body">
                            <div class="mb-3">
                               <label for="email" class="form-label">Username:</label>
                               <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
                           </div>
                           <div class="mb-3">
                               <label for="password" class="form-label">Password:</label>
                               <input type="password" class="form-control" id="password" name="password">
                           </div>

                           <div class="form-check mb-3">
                               <input class="form-check-input" type="checkbox" value="" id="remember_me" name="remember">
                               <label class="form-check-label" for="chkRememberMe">
                                   Remember Me?
                               </label>
                           </div>

                           <div>
                               <input type="submit" value="Login" class="btn btn-primary">
                               <a href="Register.html" class="btn btn-success">Register</a>
                           </div>
                    </div>

                    
                </div>
                </form>

            </div>

        </div>

    </div>

{% endblock content %}
